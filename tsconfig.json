{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": ["server-mvp.ts", "chat-handler-mvp.ts"],
  "exclude": ["node_modules", "dist", "new-files", "cloudflare-worker", "tests", "*.js"]
}